{
    "name": "shmandalf/atomic-flow",
    "description": "High-performance task visualizer built with PHP 8.4+ & Swoole",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "ext-swoole": "*",
        "psr/log": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "psr/container": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "swoole/ide-helper": "^6.0",
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpunit/phpunit": "^12.5"
    },
    "scripts": {
        "lint": "php-cs-fixer fix",
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --testsuite=Unit",
        "test:coverage": "phpunit --coverage-text"
    }
}
