{
    "name": "shmandalf/atomic-flow",
    "description": "High-performance task visualizer built with PHP 8.4+ & Swoole",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "ext-swoole": "*",
        "psr/log": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "psr/container": "^2.0",
        "fidry/cpu-core-counter": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "swoole/ide-helper": "^6.0",
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpunit/phpunit": "^12.5",
        "rector/rector": "^2.3",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "analyze": "vendor/bin/phpstan analyse",
        "refactor": "vendor/bin/rector process",
        "refactor-dry": "vendor/bin/rector process --dry-run",
        "check-all": [
            "@analyze",
            "@lint-dry",
            "@refactor-dry"
        ],
        "fix-all": [
            "@lint",
            "@refactor"
        ],
        "lint": "php-cs-fixer fix",
        "lint-dry": "php-cs-fixer fix --dry-run --diff",
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --testsuite=Unit",
        "test:coverage": "phpunit --coverage-text"
    },
    "post-install-cmd": [
        "([ -d .git ] && git config core.hooksPath .githooks) || true"
    ]
}